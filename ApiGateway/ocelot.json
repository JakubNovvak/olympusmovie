{
  "Routes": [
    // Authentication service
    {
      "UpstreamPathTemplate": "/api/account/login",
      "UpstreamHttpMethod": [ "Post" ],

      "DownstreamScheme": "https",
      "DownstreamPathTemplate": "/api/account/login",
      "DownstreamHostAndPorts": [
        {
          "Host": "authenticationservice",
          "Port": 443
        }
      ],

      "DangerousAcceptAnyServerCertificateValidator": true
    },
    {
      "UpstreamPathTemplate": "/api/account/register",
      "UpstreamHttpMethod": [ "Post" ],

      "DownstreamScheme": "https",
      "DownstreamPathTemplate": "/api/account/register",
      "DownstreamHostAndPorts": [
        {
          "Host": "authenticationservice",
          "Port": 443
        }
      ],

      "DangerousAcceptAnyServerCertificateValidator": true
    },

    // Movie service
    {
      "UpstreamPathTemplate": "/api/movies",
      "UpstreamHttpMethod": [ "Get", "Post", "Delete" ],

      "DownstreamScheme": "https",
      "DownstreamPathTemplate": "/api/movies",
      "DownstreamHostAndPorts": [
        {
          "Host": "movieservice",
          "Port": 443
        }
      ],

      "DangerousAcceptAnyServerCertificateValidator": true
    },
    {
      "UpstreamPathTemplate": "/api/movies/{id}",
      "UpstreamHttpMethod": [ "Get" ],

      "DownstreamScheme": "https",
      "DownstreamPathTemplate": "/api/movies/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "movieservice",
          "Port": 443
        }
      ],

      "DangerousAcceptAnyServerCertificateValidator": true
    }

    // Other services: coming soon...
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:25000"
  }
}
